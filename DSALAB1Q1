#include<iostream>
#define max30
using namespace std;
int main(){
	int a[100];
	int n=0,choice;
	do{
	cout<<"insert data\n"<<endl;
	cout<<"display element\n"<<endl;
	cout<<"delete element\n"<<endl;
	cout<<"update element\n"<<endl;
	cout<<"searching element\n"<<endl;
	cout<<"finding minimum\n"<<endl;
	cout<<"finding maximum\n"<<endl;
	cout<<"enter your choice";
	cin>>choice;
	switch(choice){
		case 1:
			int value;			
			cout<<"enter value to insert";
			cin>>value;
			a[n]=value;
			n++;
			cout<<"inserted\n";
			break;
		
		case 2:
			if(n==0){
				cout<<"array is empty\n";
				break;
			}
			cout<<"array elements:";
			for(int i=0;i<n;i++)
			cout<<a[i]<<""<<endl;
			break;
		
		case 3:
			int p,i;
			cout<<"enter position to delete(0 to"<<n-1<<"):";
			cin>>p;
			if(p<0||p>=n){
				cout<<"invalid position!\n";
				break;
			}
			for(i=p;i<n-1;i++)
			a[i]=a[i+1];
			n--;
			cout<<"element deleted\n";
			break;
		
		case 4:
			int newValue;
			cout<<"enter position to update 0 to"<<n-1<<"):";
			cin>>p;
			if(p<0||p>=n){
				cout<<"invalid position!\n";
				break;
			}
			cout<<"enter new value: ";
			cin>>newValue;
			a[p]=newValue;
			cout<<"updated\n";
			break;
		
		case 5:
			if(a==0){
				cout<<"array is empty";
			}else{
			int key,found=0;
			cout<<"enter element to search:";
			cin>>key;
			for(i=0;i<n;i++){
				if(a[i]==key){
					found=1;
					cout<<"element found at position:"<<(i+1)<<endl;
					break;
				}
			}
			if(found=0){
			cout<<"element not found"<<endl;
			}
	}
			break;
			
		case 6:
			if(n==0){
				cout<<"array is empty\n";
		}else{
		    int mn=a[0];		
			for (i=1;i<n;i++){
			if(a[i]<mn)mn=a[i];
			cout<<"minimum element: "<<mn<<endl;
			break;
		}
	}
	
		case 7:
			if(n==0){
				cout<<"array is empty\n";
				break;
			}
			int mx=a[0];
			for(i=1;i<n;i++){
			if(mx<a[i]){
				cout<<"maximum element: "<<mx<<endl;
			}}break;		
	}
}while(choice<8);
	return 0;
	}	
		
		
		
		
		
		
	

